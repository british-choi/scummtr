root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.1]
trim_trailing_whitespace = true

[*.{cpp,h,hpp,sh}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Dockerfile*]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[CMakeLists.txt]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile*,*.mk]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true
